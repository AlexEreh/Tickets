<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="132dp"
    android:layout_height="213dp"
    tools:layout_width="132dp"
    tools:layout_height="213dp"
    android:background="#0C0C0C">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0C0C0C"
        tools:background="#0C0C0C">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/flight_iv"
            android:layout_width="132dp"
            android:layout_height="132dp"
            android:adjustViewBounds="true"
            app:shapeAppearance="@style/CornerCut"
            android:scaleType="centerCrop"
            android:importantForAccessibility="no"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/img_first" />
        <TextView
            android:id="@+id/band_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            tools:text="Die Antwoord"/>
        <TextView
            android:id="@+id/city_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            tools:text="Будапешт"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/price_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/ic_app_bar_tickets"
            app:tint="#9F9F9F" />
        <TextView
            android:id="@+id/price_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="от 22 264 ₽"
            android:textColor="@color/white"/>

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/main_flow"
            android:layout_marginTop="8dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:flow_verticalGap="8dp"
            app:constraint_referenced_ids="band_tv,lower_flow"
            app:flow_verticalAlign="top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/flight_iv" />
        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/lower_flow"
            app:constraint_referenced_ids="city_tv,row_flow"
            app:flow_verticalGap="4dp"
            android:orientation="vertical"
            app:flow_verticalStyle="spread"
            app:flow_verticalAlign="top"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/row_flow"
            app:constraint_referenced_ids="price_iv,price_tv"
            app:flow_verticalGap="4dp"
            android:orientation="horizontal"
            app:flow_firstHorizontalStyle="packed"
            app:flow_horizontalAlign="start"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>